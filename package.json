{
  "name": "twitter-clone-server",
  "version": "1.0.0",
  "description": "Server side for Twitter Clone",
  "main": "src/app.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/app",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc --watch",
    "test": "jest --detectOpenHandles",
    "test:cov": "jest --coverage --detectOpenHandles"
  },
  "author": "Eugene Kolesnyk <eugeniusz.kolesnyk@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.0",
    "nodemon": "^2.0.5",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "nodemailer": "^6.4.14",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests/e2e",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
